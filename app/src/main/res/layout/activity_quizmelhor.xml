<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aaa_studios.prototipo1.Quizmelhor">

    <Button
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/altenativa2id"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp" />

    <Button
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/altenativa1id"
        android:layout_above="@+id/altenativa2id"
        android:layout_alignStart="@+id/altenativa2id" />

    <Button
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/altenativa3id"
        android:layout_below="@+id/altenativa1id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <Button
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/altenativa4id"
        android:layout_below="@+id/altenativa3id"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/pergunta1"
        android:textSize="24dp"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/Pontosid"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Pontosid"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/pergunta1" />
</RelativeLayout>
